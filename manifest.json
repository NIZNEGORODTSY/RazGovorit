{
    "manifest_version": 3,
    "name": "TextSimplifier",
    "version": "1.1",
    "description": "Расширение позволяет адаптировать формальный текст, привести его к простому или ясному.",
    "permissions": ["cookies", "storage", "activeTab", "scripting", "webRequest", "webRequestBlocking"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "extension/background.js"
    },
    "action": {
      "default_popup": "extension/popup.html",
      "default_icon": {
        "16": "extension/icons/16.png",
        "48": "extension/icons/48.png",
        "128": "extension/icons/128.png"
      }
    }
  }