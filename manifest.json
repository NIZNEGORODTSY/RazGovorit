{
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "extension/content-script.js"
      ],
      "css": [
        "extension/content-script.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "extension/iframe/iframe.html",
        "extension/iframe/iframe.js",
        "extension/iframe/iframe.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "name": "РазГовориить",
  "version": "1.1",
  "description": "TECHNO-FINAL_2025",
  "permissions": [
    "http://46.29.160.85:5000/*",
    "cookies",
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "declarativeNetRequest",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "extension/background.js"
  },
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": {
      "16": "extension/icons/16.png",
      "48": "extension/icons/48.png",
      "128": "extension/icons/128.png"
    }
  }
}